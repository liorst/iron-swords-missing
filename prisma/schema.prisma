datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Animal {
  id                 String @unique
  name               String
  animalType String @default("אחר")
  contactName        String
  contactPhone       String
  status             String   @default("pending")
  lastSeen           String?
  identifyingDetails String?
  imageUrl           String?
  notes              String?
  source             String   @default("siteform")
  updatedAt          DateTime @updatedAt
}

model Person {
  id                 String @unique
  first_name          String
  last_name           String
  image              String?
  contact_name        String
  contact_phone       String
  status             String  @default("pending") //"unknown" | "found" | "deceased" | "kidnapped";
  last_seen           String?
  details String?
  notes  String?
  source String?
  @@map("people")
}
