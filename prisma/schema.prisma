datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



model Person {
  id                 String @unique
  first_name          String
  last_name           String
  image              String?
  contact_name        String
  contact_phone       String
  status             String  @default("pending") //"unknown" | "found" | "deceased" | "kidnapped";
  last_seen           String?
  details String?
  notes  String?
  source String?
  @@map("people")
}
